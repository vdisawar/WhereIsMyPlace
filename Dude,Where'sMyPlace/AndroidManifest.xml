<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dudewheresmyplace"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.example.dudewheresmyplace.Dude"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dudewheresmyplace.Compass"
            android:label="@string/title_activity_compass" >
        </activity>
        <activity
            android:name="com.example.dudewheresmyplace.MyMapView"
            android:label="@string/title_activity_map_view" >
        </activity>
        <activity
            android:name="com.example.dudewheresmyplace.AddLocation"
            android:label="@string/title_activity_add_location" >
        </activity>
        <activity
            android:name="com.example.dudewheresmyplace.Navigate"
            android:label="@string/title_activity_navigate" >
        </activity>
        <activity
            android:name="com.example.dudewheresmyplace.LocationList"
            android:label="@string/title_activity_location_list" >
        </activity>
    </application>

</manifest>